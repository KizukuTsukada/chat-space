.message
  .message__upper-info
    %p.message__upper-info__talker
      = message.user.name
    %p.message__upper-info__date
      = message.created_at

  .lower-message
  - if message.content.present?
    %p.lower-message__content
      = message.content
    = image_tag message.image, class: 'lower-message__image' if message.image.present?
